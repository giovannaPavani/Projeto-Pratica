<div id="editarSenha">
 <h1 style="padding-bottom: 200px;">Editar Senha</h1>
  <form method="post" action="http://localhost:3000/editarSenha">
    <div>
      <label>Nova Senha</label>
      <input name="nsenha1" type="text" class="form-control" id="inputSenha1" placeholder="Nova Senha" required>
    </div>
    <div>
      <label>Confirme a nova senha</label>
      <input name="nsenha2" type="text" class="form-control" id="inputSenha2" placeholder="Confirme a senha" required>
    </div>
    <div>
      <label>Senha Antiga</label>
      <input name="senha" type="text" class="form-control" id="inputSenha" placeholder="Senha Antiga" required>
    </div>
    <br>
    <input type="submit" id="btn-enviar" name="submit" class="btn btn-primary" value="Enviar">
    <br>
    <div id="mensagem">
    <p></p>
    </div>
  </form>
</div>


<style>
  #editarSenha {
    position: absolute;
    margin-left: 60em;
    margin-top: 03em;
  }

  body {
    background-color: rgba(255, 156, 156, 0.815);
  }
</style>

<script>
$("#btn-enviar").click(function () {
  $.getJSON("http://localhost:3000/editarSenha", function (result) {
      var infos = result;
  $("#mensagem").html(`<p>`+ infos[1].descricao+ `</p>`);  
});
});

  </script>